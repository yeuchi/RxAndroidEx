<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="layout"
            type="com.ctyeung.rxandroidex.MainActivity"/>
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_margin="@dimen/margin"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/title_width"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:id="@+id/btnTimer"
                android:text="@string/title_timer"
                android:onClick="@{()->layout.onClickTimer()}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/txtTimerCount"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_margin="@dimen/margin"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/title_width"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:id="@+id/btnRxRetrofit"
                android:text="@string/title_rxretrofit"
                android:onClick="@{()->layout.onClickRetrofit()}"/>

            <TextView
                android:layout_width="@dimen/size_width"
                android:layout_height="wrap_content"
                android:id="@+id/txtRxRetrofitUserCount"
                android:text="0"/>

            <TextView
                android:layout_width="@dimen/size_width"
                android:layout_height="wrap_content"
                android:id="@+id/txtRxRetrofitElapsed"
                android:text="0:00"/>

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
